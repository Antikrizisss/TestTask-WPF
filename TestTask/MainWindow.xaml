<Window x:Class="TestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask"
        mc:Ignorable="d"
        Title="Тестовое задание" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="361*"/>
        </Grid.RowDefinitions>
        <Button x:Name="OpenDir" Content="Получить классы и методы" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" Width="212" Grid.Row="1" Click="OpenDir_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="262" Grid.RowSpan="2"><Run Language="ru-ru" Text="Введите путь к папке с файлами:"/></TextBlock>
        <TextBox x:Name="InputDir" HorizontalAlignment="Center" Margin="0,16,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="262" Height="36" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="Result" HorizontalAlignment="Center" Margin="0,132,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="430" Height="219"/>

    </Grid>
</Window>
